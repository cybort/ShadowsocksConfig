{
  "compilerOptions": {
    "outDir": ".",
    "rootDir": ".",
    "target": "ES5",
    "module": "commonjs",
    "declaration": false,
    "sourceMap": false,
    "inlineSourceMap": false,
    "listFiles": true,
    "traceResolution": true,
    "pretty": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "removeComments": true,
    "lib": [
      "ES6",
      "DOM",
      "ES2015.Promise"
    ],
    "types" : [
    ]
  },
  "files": [
    "*.ts"
  ],
  "exclude": [
    "Gulpfile.ts"
  ],
  "compileOnSave": false
}
